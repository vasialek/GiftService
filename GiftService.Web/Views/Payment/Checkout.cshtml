@model GiftService.Models.Products.ProductCheckoutModel

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_LayoutPos.cshtml";
}


@using (Html.BeginForm("Checkout"))
{

    <div class="container">
        <div class="row">
            <div class="col-md-8">
                
                <div id="ProductInformation" class="row">
                    <div class="col-md-10">
                        <p>Locations</p>
                        <ul class="list-group">
                            @foreach (var l in Model.Locations)
                            {
                                <li class="list-group-item">
                                    <label>
                                        @Html.RadioButtonFor(x => Model.ProductName, l.Id)
                                        @l.Name. @l.Address, @l.City
                                    </label>
                                </li>
                            }
                        </ul>
                    </div>
                </div>



                <div id="CustomerInformation" class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(x => Model.CustomerName, new { @class = "control-label col-sm-3" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => Model.CustomerName, new { @class = "form-control input-sm" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => Model.CustomerPhone, new { @class = "control-label col-sm-3" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => Model.CustomerPhone, new { @class = "form-control input-sm" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => Model.CustomerEmail, new { @class = "control-label col-sm-3" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => Model.CustomerEmail, new { @class = "form-control input-sm" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => Model.Remarks, new { @class = "control-label col-sm-3" })
                        <div class="col-sm-6">
                            @Html.TextAreaFor(x => Model.Remarks, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <p>Product</p>
                <ul class="list-group">
                    <li class="list-group-item">@Html.Raw(Model.ProductName)</li>
                    <li class="list-group-item"><span class="glyphicon glyphicon-time"></span> &nbsp; @Model.ProductDuration</li>
                    <li class="list-group-item"><span class="glyphicon glyphicon-euro"></span> &nbsp;
                        <b>@Model.RequestedAmount.ToString("N2") @Model.CurrencyCode</b></li>
                </ul>

                <div class="alert alert-warning">
                    Product is valid till @Model.ProductValidTill.ToShortDateString()
                </div>

                <table class="table table-bordered table-condensed">
                    <tr>
                        <th colspan="2">Payment</th>
                    </tr>
                    <tr>
                        <td><img src="https://www.paysera.com/new/upload/plan_payment_types/rf54608784edf5c/Paysera_logotype_internet2.png" alt="Payser" width="100" /></td>
                        <td><a href="#" class="gs-pay-link" data-id="ps">Pay using Payser</a></td>
                    </tr>
                    <tr>
                        <td><img src="https://www.paypalobjects.com/webstatic/en_US/btn/btn_buynow_pp_142x27.png" alt="PayPal" width="100" /></td>
                        <td><a href="#" class="gs-pay-link" data-id="pp">Pay using PayPal</a></td>
                    </tr>
                </table>

            </div>
        </div>
    </div>

}

@section scripts
{
    <script src="~/Scripts/checkout.js"></script>
    <script type="text/javascript">

        Checkout.init(".gs-pay-link");

    </script>
}
