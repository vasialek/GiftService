@model IEnumerable<GiftService.Models.Pos.PosClient>

@{ 
    ViewBag.Title = Resources.Language.Pos_OurClients_Title;
}

<h2>@ViewBag.Title</h2>

<div class="container">
    @if (Model.Count() > 0)
    {
        foreach (var p in Model)
        {
            <div class="row">
                <div class="col-md-2 col-md-offset-1">
                    <a href="@p.Url" target="_blank" class="thumbnail"><img src="~/Content/images/posnologo.png" alt="@p.Name" /></a>
                </div>
                <div class="col-md-8">
                    <a href="@p.Url" target="_blank" class="h4">@p.Name</a><br />
                    @p.Description
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">@Resources.Language.Pos_OurClients_NoResults</div>
    }
</div>
